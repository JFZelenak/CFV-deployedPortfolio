{% extends 'base.html.twig' %}

{% block title %}Details{% endblock %}

{% block body %}
    <h3>{{ art_item.name }} by {{ art_item.artistFirstName }} {{ art_item.artistLastName }}</h3>
    <div class="">
        <div class="d-flex justify-content-center gap-3 my-5">

            <div class="d-flex">
                <div class="p-3 border border-dark shadow">
                    <img src="{{ art_item.image }}" alt="image of {{ art_item.id }}" height="500px">
                </div>
            </div>

            <div class="d-flex flex-column justify-content-end" style="width: 350px;">
                <div class="p-2 border border-dark shadow">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Title:</th>
                                <td>{{ art_item.name }}</td>
                            </tr>
                            <tr>
                                <th>Artist:</th>
                                <td>{{ art_item.artistFirstName }} {{ art_item.artistLastName }}</td>
                            </tr>
                            <tr>
                                <th>Production year:</th>
                                <td>{{ art_item.productionDate ? art_item.productionDate|date('Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td>{{ art_item.price | number_format(2, ',', '.') ~ 'â‚¬' }}</td>
                            </tr>
                            <tr>
                                <td colspan="2" class="text-center">
                                    <a href="{{ path('app_art_items_index') }}" class="border border-dark p-1 link-dark text-decoration-none link-opacity-75 link-opacity-100-hover shadow">back to list</a>
                                    {% if (is_granted('ROLE_ADMIN')) %}
                                        <a href="{{ path('app_art_items_edit', {'id': art_item.id}) }}" class="border border-dark p-1 link-dark text-decoration-none link-opacity-75 link-opacity-100-hover shadow">edit</a>
                                        <span>{{ include('art_items/_delete_form.html.twig') }}</span>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

    <div class="mt-5"> </div>
{% endblock %}
